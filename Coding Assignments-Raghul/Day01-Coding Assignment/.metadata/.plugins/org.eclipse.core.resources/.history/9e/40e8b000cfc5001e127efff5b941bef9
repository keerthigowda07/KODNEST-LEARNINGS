import java.util.Scanner;

public class ArmStrongNumber {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter a Number");
		int num=scan.nextInt();
		int help=num;
		int count=0;
		while(help!=0) {
			help/=10;
			count++;
		}
		System.out.println(count);
	}
}
